<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Asclepius" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red_light</item>
        <item name="colorPrimaryVariant">@color/deep_red_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_red_light</item>
        <item name="colorSecondaryVariant">@color/accent_red_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_red_light</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/pale_red_light</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Card and container colors -->
        <item name="colorSurfaceVariant">@color/light_red_light</item>
        <item name="colorOnSurfaceVariant">@color/deep_red_light</item>

        <!-- Component colors -->
        <item name="colorError">@color/deep_red_light</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOutline">@color/muted_red_light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/deep_red_light</item>
        <item name="android:textColorHint">@color/muted_red_light</item>
    </style>

    <style name="Theme.Asclepius" parent="Base.Theme.Asclepius" />
</resources>